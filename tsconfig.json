{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2023"],
    "target": "es2022",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "templates",
    "testApp",
    "setupFiles.ts",
    "tests",
    "vitest.config.ts"
  ]
}
